<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raushan.rent.Customer_Info">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:background="@drawable/editshape"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:hint="  Enter Customer's Name*"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Customer's Informaion" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText4"
            android:hint="  Enter Property Name"
            android:background="@drawable/editshape"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cno"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:hint="  Customer's Contact number"
            android:layout_below="@+id/editText5"
            android:layout_marginTop="22dp"
            android:background="@drawable/editshape"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cno"
            android:layout_marginTop="28dp"
            android:background="@drawable/editshape"
            android:ems="10"
            android:hint="  Alternate Contact Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/editshape"
            android:layout_alignEnd="@+id/editText8"
            android:hint="  Customer's Email or Website"
            android:layout_below="@+id/editText8"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editshape"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="Submit" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
