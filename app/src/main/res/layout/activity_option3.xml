<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.raushan.rent.Option3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/size3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="10dp"
            android:entries="@array/prop_size"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/facilities3"
            android:background="@drawable/editshape"
            android:layout_marginTop="25dp"
            android:text="Select Facilities" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="17dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="25dp"
            android:text="  Items you have selected are:-" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="5dp"
            android:text="  Please select by clicking on button" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/editshape"
            android:ems="10"
            android:id="@+id/rate3"
            android:layout_marginTop="25dp"
            android:hint="Rent per Night"
            android:inputType="number" />

        <EditText
            android:id="@+id/supplynotes3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/editshape"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="  Special Supply notes"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/opt3smt"
            android:layout_marginTop="25dp"
            android:background="@drawable/editshape"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>
